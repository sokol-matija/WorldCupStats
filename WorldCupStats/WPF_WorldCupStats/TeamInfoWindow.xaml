<Window x:Class="WPF_WorldCupStats.TeamInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Team Info" Height="300" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
	<Window.Triggers>
		<EventTrigger RoutedEvent="Window.Loaded">
			<BeginStoryboard>
				<Storyboard>
					<DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
					<DoubleAnimation Storyboard.TargetProperty="Width" From="0" To="400" Duration="0:0:0.5"/>
					<DoubleAnimation Storyboard.TargetProperty="Height" From="0" To="300" Duration="0:0:0.5"/>
				</Storyboard>
			</BeginStoryboard>
		</EventTrigger>
	</Window.Triggers>
	<Border Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
		<StackPanel Margin="20">
			<TextBlock x:Name="txtTeamName" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
			<TextBlock x:Name="txtFifaCode" Margin="0,0,0,5"/>
			<TextBlock x:Name="txtGamesPlayed" Margin="0,0,0,5"/>
			<TextBlock x:Name="txtWins" Margin="0,0,0,5"/>
			<TextBlock x:Name="txtLosses" Margin="0,0,0,5"/>
			<TextBlock x:Name="txtDraws" Margin="0,0,0,5"/>
			<TextBlock x:Name="txtGoalsFor" Margin="0,0,0,5"/>
			<TextBlock x:Name="txtGoalsAgainst" Margin="0,0,0,5"/>
			<TextBlock x:Name="txtGoalDifferential" Margin="0,0,0,5"/>
		</StackPanel>
	</Border>
</Window>