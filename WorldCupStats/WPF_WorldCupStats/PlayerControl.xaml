<UserControl x:Class="WPF_WorldCupStats.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="60" Width="50">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Image x:Name="imgPlayer" Grid.Row="0" Stretch="Uniform"/>
		<TextBlock x:Name="txtPlayerInfo" Grid.Row="1" TextAlignment="Center" TextWrapping="Wrap"/>
	</Grid>
</UserControl>